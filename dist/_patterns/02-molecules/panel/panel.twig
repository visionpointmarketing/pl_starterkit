<div class="panel{% if panel_class %} {{ panel_class }}{% endif %}">
	{% if panel_url %}<a href='{{ panel_url }}'>{% endif %}
	<div class='item'>
		{% if panel_sub %}
			{% set panel_title %}{{ panel_title }}<span class='sub-text'>{{ include ("atoms-text",{"text":panel_sub}) }}</span>{% endset %}
		{% endif %}
		{{ include ("atoms-header",{"header_title":panel_title,"header_type":"3"})}}
		{% if panel_pattern_attributes %}{% include panel_pattern ignore missing with panel_pattern_attributes %}{% else %}{% include panel_pattern ignore missing %}{% endif %}
	</div>
	{% if panel_url %}</a>{% endif %}
</div>
